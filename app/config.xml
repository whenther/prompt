<?xml version="1.0" encoding="UTF-8" ?>
<widget id="net.whentheresawill.prompt" version="0.0.1">
    <name>prompt</name>
    <description>A teleprompter for the 21st Century</description>
    <author email="will@whentheresawill.net"
    href="http://whentheresawill.net">Will</author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    
    <icon src="apple-touch-icon.png" />
    <icon src="icons/icon-android-ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
    <icon src="icon-android-mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
    <icon src="icon-android-hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
    <icon src="icon-android-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
    
    <gap:splash src="ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
    <gap:splash src="mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
    <gap:splash src="hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
    <gap:splash src="xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
</widget>
